<h1>Stores</h1>
<table>
  <thead>
    <tr>
      <th>Codename</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.codename %></td>
        <td><%= store.address %></td>
        <td><%= store.phone %></td>
        <td>
          <%= link_to 'Show', store_path(store) %>
          <%= link_to 'Edit', edit_store_path(store) %>
          <%= link_to 'Delete', store_path(store), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Store', new_store_path %>
