<h1>Books</h1>
    <% @books.each do |book| %>
    <div>
        <%= book.title %>
        <%= book.author %>
        <%= book.year %>

          <%= link_to 'Edit', edit_book_path(book) %>

        <% @inventory.each do |i| %>
          <%if i.book_id == book.id%>
            <%= i.store_id %>
            <%= i.quantity %>
          <%end%>
        <%end%>  
    </div>
    <% end %>
<%= link_to 'New Book', new_book_path %>
