<div class="new"><%= link_to 'New Book', new_book_path if user_signed_in? %></div>
<div class="inv" id="inv">
    <% @books.each do |book| %>
    <div  class="item">
        <h3><%= book.title %></h3>
       <div class="details">
        <%= book.author %>
        <%= book.year %>
       </div> 
       <div class="stores">
            <p>Availability</p>
            <div class="store">
                <% @inventory.each do |i| %>
                <%if i.book_id == book.id%>
                <div class="store">
                <% @stores.each do |s| %>
                    <%if i.store_id == s.id%>
                    <%= s.codename%>
                    <%end%>
                <%end%>
                <b>has</b>
                <%= i .quantity%>
                <b>units</b>
                </div>
                <%end%>
                <%end%>   
        </div>
       
    </div>
    <div class="edit"><%= link_to 'Edit', edit_book_path(book) if user_signed_in? %></div>
     </div>
    <% end %>

       